---
import "../styles/fonts.scss";
import "../styles/cards.scss";
import Menu from "../components/Menu.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <!-- Yes I copied the description from Bisect Hosting. Deal with it. -->
        <meta
            name="description"
            content="Luna Pixel Studios is a Minecraft Modpack and Mod Development Studio based around creating mainly Vanilla+, Adventure and RPG Modpacks and Mods, as well as a hub for all things Modded Minecraft."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Menu />
        <slot />
    </body>
</html>

<style is:global>
    html,
    body {
        font-family: system-ui, sans-serif;
        background: #13151a;
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        border: none;
    }

    main {
        color: white;
        font-size: 20px;

        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
    }
</style>
