---
import "../styles/fonts.scss";
import "../styles/cards.scss";
import "../styles/global.scss";
import Menu from "../components/Menu.svelte";
import { ViewTransitions } from "astro:transitions";
import LoadingIndicator from "astro-loading-indicator/component";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <!-- Yes I copied the description from Bisect Hosting. Deal with it. -->
        <meta
            name="description"
            content="Luna Pixel Studios is a Minecraft Modpack and Mod Development Studio based around creating mainly Vanilla+, Adventure and RPG Modpacks and Mods, as well as a hub for all things Modded Minecraft."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
        <LoadingIndicator color="#127CD1" height="0.25rem" threshold={0} />
    </head>
    <body>
        <Menu client:only="svelte" />
        <slot />
    </body>
</html>

<style is:global>
    html,
    body {
        font-family: system-ui, sans-serif;
        background: #13151a;
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        border: none;
    }

    main {
        color: white;
        font-size: 20px;

        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
    }
</style>
